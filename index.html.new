    <title>Patiya | Professional Counselor & Intelligence Specialist</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        cream: '#F5F5DC',
                        army: '#4B5320',
                        darkArmy: '#3a4320',
                        lightCream: '#fafaf0',
                    },
                    fontFamily: {
                        'display': ['Playfair Display', 'serif'],
